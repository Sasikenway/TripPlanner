@model List<TripPlanner.Models.Trip>

<h1>My Trips</h1>

<table class="table">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate?.ToShortDateString() ?? "N/A"</td>
                <td>@trip.EndDate?.ToShortDateString() ?? "N/A"</td>
                <td>@trip.Accommodations</td>
                <td>@trip.ThingsToDo</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<a href="@Url.Action("Start", "Trip")">Add Trip</a>
